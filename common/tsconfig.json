{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,      // Add this for better debugging
    "emitDeclarationOnly": true,  // Add this line
    "baseUrl": ".",              // Required for path resolution
    "paths": {                   // Add if you have internal aliases
      "@wedding/common/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"              // Exclude test files if present
  ],
  "references": []              // Add if this references other packages
}