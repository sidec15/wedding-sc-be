{
  "name": "wedding-be",
  "private": true,
  "workspaces": [
    "common",
    "lambdas/*"
  ],
  "scripts": {
    "build": "npm run build -w common && npm run build -ws",
    "clean": "rimraf --glob dist common/dist \"lambdas/*/dist\"",
    "clean:modules": "rimraf --glob node_modules common/node_modules \"lambdas/*/node_modules\"",
    "clean:all": "npm run clean && npm run clean:modules",
    "deploy": "cd infrastructure && cdk deploy",
    "update:common-version": "npm version patch -w common"
  }
}